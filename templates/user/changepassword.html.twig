{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Change Password' | trans }}
{% endblock %}

{% block body %}

    <h1 class="text-center text-3xl font-bold text-gray-700">{{ 'Change my profile' | trans }}</h1>

    {{ form_start(passwordForm) }}
    <div class="my-4 grid-cols-1 text-center">

        <div class="flex-col">

            <div>{{ form_label(passwordForm.password.first, 'New Password' | trans) }}
                {{ form_widget(passwordForm.password.first, {'attr': {'autocomplete': 'off'}}) }}
                {{ form_errors(passwordForm.password.first) }}
            </div>

            <div>
                {{ form_label(passwordForm.password.second, 'Repeat Password' | trans) }}
                {{ form_widget(passwordForm.password.second, {'attr': {'autocomplete': 'off'}}) }}
                {{ form_errors(passwordForm.password.second) }}
            </div>

        </div>



    </div>



        <div class="w-1/5 px-3 m-auto">
            <button type="submit" class="btn bg-green-600 hover:bg-green-700 text-white my-2
                            font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">
                {{ 'Submit' | trans  }}
            </button>
        </div>

        {{ form_end(passwordForm) }}

        <div class="w-1/5 px-3 m-auto">
            <a href="{{ path('user_modify_profile') }}">
            <input type="submit" class="btn bg-red-700 hover:bg-red-800 text-white my-2
                            font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" value="{{ 'Cancel' | trans  }}" formnovalidate>
            </a>
        </div>



{% endblock %}

