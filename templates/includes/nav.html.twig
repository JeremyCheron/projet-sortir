<!--NAVBAR-->
<section class="top-nav w-full h-full">
    <a href="{{ path('main_home') }}">
        <div class="nav-logo flex items-center justify-center text-black">
                <img class="logo hidden md:block" src="{{ asset('imgs/logos/logo.png') }}" alt="Logo">
                <h1 class="text-xl md:text-2xl font-bold">{{ "Welcome to Sortir.com" | trans }} </h1>
        </div>
    </a>
    <input id="menu-toggle" type="checkbox" />
    <label class='menu-button-container flex items-center justify-center text-black' for="menu-toggle">
        <div class='menu-button'></div>
    </label>
    <ul class="menu">
        <li><a href="{{ path('main_home') }}">{{ 'Home' | trans }}</a></li>
        <li><a href="{{ path('event_list') }}">{{ 'Events' | trans }}</a></li>
        {% if app.user %}
            {% if app.user.isAdmin %}
                <li><a href="{{ path('admin_manage_users') }}">{{ 'Manage Users' | trans }}</a></li>
                <li><a href="{{ path('app_place_index') }}">{{ 'Places' | trans }}</a></li>
                <li><a href="{{ path('app_city_index') }}">{{ 'Cities' | trans }}</a></li>
            {% endif %}
            <li><a href="{{ path('user_details', {'id': app.user.id }) }}">{{ app.user.nickname }}</a></li>
            <li><a href="{{ path('app_logout') }}">{{ 'Logout' | trans }}</a></li>
        {% else %}
            <li><a href="{{ path('app_login') }}">{{ 'Login' | trans }}</a></li>
        {% endif %}
    </ul>
</section>

