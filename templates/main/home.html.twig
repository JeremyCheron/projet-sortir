{% extends 'base.html.twig' %}


{% block body %}
    <div class="w-auto p-10">
        {% set h = 'now'|date('H') %}
        <div class="flex justify-around m-auto">
            <div class="w-3/4">
                {{ include('form/search.html.twig') }}
            </div>

            <div class="font-bold text-right w-auto hidden lg:block">
                <p>{{ 'Date of the day' | trans }} : {{ "now" | date('d/m/Y') }}</p>
                <p>
                    {% if h >= 6 and h < 12 %}
                        {{ 'Good Morning' | trans }} {{ app.user.firstname | capitalize }} !
                    {% elseif h >= 12 and h < 18 %}
                        {{ 'Good Afternoon' | trans }} {{ app.user.firstname | capitalize }} !
                    {% elseif h >= 18 %}
                        {{ 'Good Evening' | trans }} {{ app.user.firstname | capitalize }} !
                    {% else %}
                        {{ 'Night night' | trans }} {{ app.user.firstname | capitalize }} !
                    {% endif %}
            </div>
        </div>

        <div class="flex-col items-center justify-evenly m-auto">
            {{ include('event/list.html.twig') }}
        </div>
    </div>

{% endblock %}

{% block title %}
    {{ parent() }} Accueil
{% endblock %}

