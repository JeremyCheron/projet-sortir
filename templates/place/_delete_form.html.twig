<form method="post" action="{{ path('app_place_delete', {'id': place.id}) }}" onsubmit="return confirm('{{'Are you sure you want to delete this item' | trans }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ place.id) }}">
    <button class="btn bg-red-500 hover:bg-red-700 text-white
                    font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">{{ 'Delete' | trans }}</button>
</form>
