{#                {{ form_errors(newEventForm.campus) }}#}
                <label for="city" class="block text-gray-700 font-bold mb-2">City</label>
                <input type="text" class="form-input rounded-md shadow-sm" name="city" id="city">
            </div>
            <div class="my-4">
                {{ form_label(newEventForm.place, 'Place', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(newEventForm.place, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(newEventForm.place) }}
            </div>
            <div class="my-4">

                <label for="street" class="block text-gray-700 font-bold mb-2">Street</label>
                <input type="text" class="form-input rounded-md shadow-sm" name="street" id="street">
            </div>
            <div class="my-4">
                <label for="zipCode" class="block text-gray-700 font-bold mb-2">Zip Code</label>
                <input type="text" class="form-input rounded-md shadow-sm" name="zipCode" id="zipCode">
            </div>
            <div class="my-4">
                <label for="latitude" class="block text-gray-700 font-bold mb-2">Latitude</label>
                <input type="text" class="form-input rounded-md shadow-sm" name="latitude" id="latitude">
            </div>
            <div class="my-4">
                <label for="longitude" class="block text-gray-700 font-bold mb-2">Longitude</label>
                <input type="text" class="form-input rounded-md shadow-sm" name="longitude" id="longitude">
            </div>

        </div>
    </div>
        <button>Save</button>
        <button>Publish the event</button>
        <button>Cancel</button>
        {{ form_end(newEventForm) }}

{% endblock %}


