        {{ form_start(newEventForm) }}
    <div class="grid md:grid-cols-2 w-3/4 mx-auto md:gap-16 justify-center place-content-evenly p-4">
        <div class="">
            <div class="my-4">
                {{ form_label(newEventForm.name, 'Name of the event', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(newEventForm.name, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(newEventForm.name) }}
            </div>
            <div class="my-4">
                {{ form_label(newEventForm.startDate, 'Date and time of the event', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(newEventForm.startDate, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(newEventForm.startDate) }}
            </div>
            <div class="my-4">
                {{ form_label(newEventForm.registrationDeadline, 'Registration deadline', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(newEventForm.registrationDeadline, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(newEventForm.registrationDeadline) }}
            </div>
            <div class="my-4">
                {{ form_label(newEventForm.maxRegistrations, 'Maximum number of attendants', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(newEventForm.maxRegistrations, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(newEventForm.maxRegistrations) }}
            </div>
            <div class="my-4">
                {{ form_label(newEventForm.duration, 'Duration', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(newEventForm.duration, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }} minutes
                {{ form_errors(newEventForm.duration) }}
            </div>
            <div class="my-4">
                {{ form_label(newEventForm.description, 'Description', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(newEventForm.description, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(newEventForm.description) }}
            </div>
        </div>
        <div class="">
            <div class="my-4">
                {{ form_label(newEventForm.campus, 'Campus', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(newEventForm.campus, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(newEventForm.campus) }}
            </div>
            <div class="my-4">
