<h1 class="text-2xl md:text-4xl text-center justify-center items-center mx-auto my-20">Edition : {{ event.name }}</h1>


{{ form_errors(form) }}

    {{ form_start(form) }}
    <div class="grid md:grid-cols-2 w-3/4 mx-auto md:gap-16 justify-center place-content-evenly p-4">
        <div class="">
            <div class="my-4">
                {{ form_label(form.name,'Name of the event', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="my-4">
                {{ form_label(form.startDate, 'Date and time of the event', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.startDate, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(form.startDate) }}
            </div>
            <div class="my-4">
                {{ form_label(form.registrationDeadline, 'Registration deadline', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.registrationDeadline, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(form.registrationDeadline) }}
            </div>
            <div class="my-4">
                {{ form_label(form.maxRegistrations, 'Maximum number of attendants', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.maxRegistrations, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(form.maxRegistrations) }}
            </div>
            <div class="my-4">
                {{ form_label(form.duration, 'Duration', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.duration, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                minutes
                {{ form_errors(form.duration) }}
            </div>
            <div class="my-4">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="">
            <div class="my-4">
                <label for="city" class="block text-gray-700 font-bold mb-2">Campus</label>
                <p>{{ app.user.campus.name }}</p>
                {#                    <p>{{ user.campus.name }}</p> #}
            </div>
            <div class="my-4">

                <label for="city" class="block text-gray-700 font-bold mb-2">City</label>
                <select class="form-input rounded-md shadow-sm" name="city" id="city">
                    {% for city in cities %}
                        <option value="{{ city.id }}">
                            {{ city.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="my-4">
                {{ form_label(form.place, 'Place', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.place, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}
                {{ form_errors(form.place) }}
                <a href="{{ path('app_place_new') }}"><i
                            class="fa-solid fa-plus bg-blue-500 border border-blue-500 rounded-full p-1 text-white font-bold mx-2"></i></a>
            </div>
            <div class="my-4">

                <label for="street" class="block text-gray-700 font-bold mb-2">Street</label>
                {# TODO : auto-remplissage #}
                <p> Street </p>
            </div>
            <div class="my-4">
                <label for="zipCode" class="block text-gray-700 font-bold mb-2">Zip Code</label>
                {# TODO : auto-remplissage #}
                <p> Zip Code </p>
            </div>
            <div class="my-4">
                <label for="latitude" class="block text-gray-700 font-bold mb-2">Latitude</label>
                {# TODO : auto-remplissage #}
                <p> Latitude </p>
            </div>
            <div class="my-4">
                <label for="longitude" class="block text-gray-700 font-bold mb-2">Longitude</label>
                {# TODO : auto-remplissage #}
                <p> Longitude </p>
            </div>
        </div>
    </div>
    <div class="md:flex text-center justify-evenly items-center mx-auto my-1 w-1/2">
        <div class='w-1/3'>
            <a href=""><input type="submit" name="save" class="w-48 bg-green-600 text-white border rounded-lg" value="Save"></a>
        </div>
        <div class="w-1/3">
            <a href=""><input type="submit" name="publish" class="w-48 bg-blue-500 text-white border rounded-lg" value="Publish the event"></a>
        </div>
        <div class="w-1/3">
            <a href=""><input type="button" class="w-48 bg-orange-600 text-white border rounded-lg" value="Delete the event"></a>
        </div>
        <div class="w-1/3">
            <a href=""><input type="button" class="w-48 bg-red-700 text-white border rounded-lg" value="Cancel"></a>
        </div>
    </div>
    {{ form_end(form) }}



