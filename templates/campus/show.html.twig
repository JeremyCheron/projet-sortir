{% extends 'base.html.twig' %}

{% block title %}Campus{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-center my-8 w-3/4 mx-auto">
        <h2 class="text-2xl font-bold">{{ 'Campus' | trans }} : {{ campus.name }}</h2>


        <div class="flex items-center justify-evenly text-center my-8 font-bold">

            <a href="{{ path('app_campus_index') }}" class="mx-12">
                <i class="fa-solid fa-list"></i>
                <br>
                {{ 'Back' | trans }}
            </a>

            <a href="{{ path('app_campus_edit', {'id': campus.id}) }}" class="mx-12">
                <i class="fa-solid fa-pen-to-square"></i>
                <br>
                {{ 'Edit' | trans }}
            </a>
        </div>

        {{ include('campus/_delete_form.html.twig') }}

    </div>
{% endblock %}
