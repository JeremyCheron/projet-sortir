<form method="post" action="{{ path('app_city_delete', {'id': campus.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item' | trans }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campus.id) }}">
    <button class="btn"><i class="fa-solid fa-trash"></i></button>
    <br>
    <div class="hidden md:block">{{ 'Delete' | trans }}</div>
</form>
