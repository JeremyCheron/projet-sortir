{% extends 'base.html.twig' %}

{% block title %}Hello CSVImportController!{% endblock %}

{% block body %}
    <h2 class="mx-auto text-center text-2xl font-bold">Import CSV</h2>

    <div class="mx-auto flex-col text-center items-center justify-center my-8">

        {% if message is defined %}
            <p>{{ message }}</p>
        {% endif %}

        <form method="post" enctype="multipart/form-data" class="my-8">
            <div class="my-4">
                <label for="csvFile" class="block text-gray-700 font-bold mb-2">SÃ©lectionnez un fichier CSV :</label>
                <input type="file" name="csvFile" id="csvFile" accept=".csv" class="form-input rounded-md shadow-sm">
            </div>
            <div>
                <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white my-8
                            font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-1/6">Importer</button>
            </div>
            <input type="hidden" name="csrf_token" value="{{ csrf_token('csv_import') }}">
        </form>
    </div>
{% endblock %}
