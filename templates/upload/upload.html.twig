{% extends 'base.html.twig' %}

{% block title %}{{ 'New Profile Picture' | trans }}{% endblock %}

{% block body %}

    <div class="mt-28 md:mt-0">

        <h1 class="text-center text-3xl font-bold text-gray-700 my-1">{{ 'Download a new profile picture' | trans }}</h1>

        {{ form_start(form) }}

        <div class="flex-col items-center justify-center my-3">
            <div class="flex items-center justify-center">{{ form_label(form.image, 'Image' | trans, {'label_attr': {'class': 'block text-gray-700 font-bold mb-2 px-5'}}) }}</div>
            <div class="flex items-center justify-center">{{ form_widget(form.image, {'attr': {'class': 'form-input rounded-md shadow-sm'}}) }}</div>

            {{ form_errors(form.image) }}
        </div>


        <div class="flex-col md:flex-row items-center justify-center w-full">
            <div class="w-full px-3 flex items-center justify-center">
                <button type="submit" class="btn bg-green-600 hover:bg-green-700 text-white my-2
                        font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-40">
                    {{ 'Submit' | trans }}
                </button>
            </div>
            <div class="w-full px-3 flex items-center justify-center">
                <a href="{{ path('user_modify_profile') }}">
                    <input type="button" class="btn bg-red-600 hover:bg-red-700 text-white my-2
                        font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-40" value="{{ 'Cancel' | trans }}">
                </a>
            </div>

        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
