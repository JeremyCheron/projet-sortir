{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-center my-8 w-3/4 mx-auto">
        <h2 class="text-2xl font-bold">Group index</h2>

        <table class="table-auto border border-gray-200 my-8">
            <thead class="bg-gray-100">
            <tr>
                <th class="w-48">Name</th>
                <th class="w-48">Owner</th>
                <th class="w-48">Members</th>
                <th class="w-48">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                <tr class="h-20 md:h-12 text-center {{ loop.index % 2 == 0 ? 'bg-gray-100' : '' }}">
                    <td>{{ group.name }}</td>
                    <td>{{ group.owner.nickname }}</td>
                    <td>{{ group.members | length }}</td>
                    <td class="flex items-center justify-evenly h-full">
                        <div class="font-bold text-center">
                            <a href="{{ path('app_group_show', {'id': group.id}) }}"><i class="fa-solid fa-eye"></i></a>
                            <br>
                            Show
                        </div>
                        <div class="font-bold text-center">
                            <a href="{{ path('app_group_edit', {'id': group.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                            <br>
                            Edit
                        </div>
                        <div class="font-bold text-center">
                            {{ include('group/_delete_form.html.twig') }}
                        </div>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div>
            <button class="btn bg-blue-500 hover:bg-blue-700 text-white
                            font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">
                <a href="{{ path('app_group_new') }}">Create new</a>
            </button>
        </div>
    </div>
{% endblock %}
